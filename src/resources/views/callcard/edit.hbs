        <div class="row">
          <div class="col-md-12">
    
            <div class="tile">
              <h3 class="tile-title">Chỉnh sửa thông tin phiếu mượn trả</h3>
              <div class="tile-body">
                <form class="row" method="post" action="/callcard/{{callcards._id}}?_method=PUT">
                  <div class="form-group col-md-4">
                    <label class="control-label" for="readerid">Mã độc giả</label>
                    <input value="{{callcards.readerid}}" name="readerid" id="readerid" class="form-control" type="text" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label class="control-label" for="fullname">Họ tên</label>
                    <input value="{{callcards.fullname}}" name="fullname" id="fullname" class="form-control" type="text" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label class="control-label" for="bookdetails">Mã tài liệu</label>
                    <input value="{{callcards.bookdetails}}" name="bookdetails" id="bookdetails" class="form-control" type="text" required>
                  </div>
                  {{!-- <div class="form-group col-md-4">
                    <label class="control-label" for="topic">Nhan đề</label>
                    <input value="{{callcards.}}" name="topic" id="topic" class="form-control" type="text" required>
                  </div> --}}
                  <div class="form-group  col-md-4">
                    <label class="control-label" for="expirationdate">Hạn trả</label>
                    <input value="{{callcards.expirationdate}}" name="expirationdate" id="expirationdate" class="form-control" type="date" required>
                  </div>
                  <div class="form-group  col-md-4">
                    <label class="control-label" for="returndate">Ngày trả</label>
                    <input value="{{callcards.returndate}}" name="returndate" id="returndate" class="form-control" type="date" required>
                  </div>
                  <div class="form-group  col-md-4">
                    <label class="control-label" for="deposit">Tiền cọc</label>
                    <input value="{{callcards.deposit}}" name="deposit" id="deposit" class="form-control" type="number" required>
                  </div>
                  </div>
                  <button class="btn btn-save" type="submit">Lưu lại</button>
                </form>
              </div>
              <a class="btn btn-cancel" href="/callcard">Hủy bỏ</a>
              <a class="btn btn-delete print-file" type="button" title="In" onclick=""><b>In phiếu trả</b></a>
            </div>
    
