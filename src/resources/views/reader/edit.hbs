    <main class="app-content">
        <div class="app-title">
          <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">Danh sách độc giả</li>
            <li class="breadcrumb-item"><a href="#">Chỉnh sửa thông tin</a></li>
          </ul>
        </div>
        <a class="btn btn-cancel" href="/reader">Quay lại</a>
        <div class="row">
          <div class="col-md-12">
    
            <div class="tile">
    
              <h3 class="tile-title">Chỉnh sửa độc giả</h3>
              <div class="tile-body">
                <form class="row" method="POST" action="/reader/{{readers._id}}?_method=PUT">
                  <div class="form-group col-md-4">
                    <label class="control-label" for="fullname">Họ và tên</label>
                    <input class="form-control" value="{{readers.fullname}}" id="fullname" name="fullname" type="text" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label class="control-label" for="class">Lớp</label>
                    <input class="form-control" value="{{readers.class}}" id="class" name="class" type="text" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label class="control-label" for="mail">Email</label>
                    <input class="form-control" value="{{readers.mail}}" id="mail" name="mail" type="text" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label class="control-label" for="address">Địa chỉ thường trú</label>
                    <input class="form-control" value="{{readers.address}}" id="address" name="address" type="text" required>
                  </div>
                  <div class="form-group  col-md-3">
                    <label class="control-label" for="phone">Số điện thoại</label>
                    <input class="form-control" value="{{readers.phone}}" id="phone" name="phone" type="number" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label class="control-label" for="dateofbirth">Ngày sinh</label>
                    <input class="form-control" value="{{readers.dateofbirth}}" id="dateofbirth" name="dateofbirth" type="date">
                  </div>
                  <div class="form-group col-md-3">
                    <label class="control-label" for="idcard">Số CMND</label>
                    <input class="form-control" value="{{readers.idcard}}" id="idcard" name="idcard" type="number" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label class="control-label" for="gender">Giới tính</label>
                    <select class="form-control" value="{{readers.gender}}" id="gender" name="gender" required>
                      <option>-- Chọn giới tính --</option>
                      <option>Nam</option>
                      <option>Nữ</option>
                    </select>
                  </div>
    
                  <div class="form-group col-md-3">
                    <label for="object" class="control-label">Đối tượng</label>
                    <select class="form-control" value="{{readers.object}}" id="object" name="object">
                      <option>-- Chọn đối tượng --</option>
                      <option>Sinh viên</option>
                      <option>Giảng viên</option>
                      <option>CB-NV</option>
                    </select>
                  </div>

                  <button type="submit" class="btn btn-save" style="width: 20%;">Lưu lại</button>
                </form>
              </div>
              
            </div>
    
